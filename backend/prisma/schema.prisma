generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drone {
  id         String         @id @default(uuid())
  name       String
  serial     String        @unique
  // model      DroneModel     @relation(fields: [modelId], references: [id])
  modelId    String?
  // operator   Operator       @relation(fields: [operatorId], references: [id])
  operatorId String?
  createdAt  DateTime       @default(now())
  // sessions   DroneSession[]
}

model DroneSession {
  id         String         @id @default(uuid())
  // drone      Drone          @relation(fields: [droneId], references: [id])
  droneId    String
  // region     Region         @relation(fields: [regionId], references: [id])
  regionId   String
  startedAt  DateTime       @default(now())
  endedAt    DateTime?
  // positions  Position[]
}

model Position {
  id         String         @id @default(uuid())
  // session    DroneSession   @relation(fields: [sessionId], references: [id])
  sessionId  String
  latitude   Float
  longitude  Float
  altitude   Float?
  speed      Float?
  heading    Float?
  recordedAt DateTime       @default(now())

  @@index([sessionId, recordedAt])
}

model Operator {
  id        String   @id @default(uuid())
  name      String
  licenseId String?
  // drones    Drone[]
}

model DroneModel {
  id           String   @id @default(uuid())
  name         String
  manufacturer String
  maxSpeed     Float?
  maxRange     Float
  // drones       Drone[]
}

model Region {
  id         String   @id @default(uuid())
  name       String
  regionCode String
  // sessions   DroneSession[]
}
