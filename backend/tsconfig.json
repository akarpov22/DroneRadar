{
  "compilerOptions": {
    "target": "ES2021",                         
    "module": "CommonJS",                       
    "lib": ["ES2021"],                          
    "rootDir": "src",                           
    "outDir": "dist",                           
    "strict": true,                             
    "moduleResolution": "node",                 
    "esModuleInterop": true,                    
    "skipLibCheck": true,                       
    "forceConsistentCasingInFileNames": true,   
    "resolveJsonModule": true,                  
    "allowJs": false,                           
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
